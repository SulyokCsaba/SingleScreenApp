<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:orientation="vertical"
    tools:context="com.example.android.singlescreenapp.MainActivity"
    android:background="#e0e0e0"
    >

    <ImageView
        android:layout_width="wrap_content"

        android:background="@drawable/taverna"
        android:layout_weight="6"
        android:layout_height="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Taverna Söröző és Pizzéria"
        android:textColor="#1a237e"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:layout_weight="1"
        android:layout_height="0dp" />

    <TextView
        android:text="Telephone Number: +3630/5534768"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#3949ab"
        android:id="@+id/textView2"
        android:layout_weight="1"
        android:layout_height="0dp" />

    <TextView
        android:text="Address: 2740 Abony, Ceglédi street 2."
        android:layout_width="wrap_content"
        android:textColor="#3949ab"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_weight="1"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView"
        android:layout_height="0dp" />

    <TextView
        android:text="Opening Hours: Everyday 6:00 - 21:00"
        android:layout_width="wrap_content"

        android:textColor="#3949ab"
        android:textSize="20sp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:layout_height="0dp" />


</LinearLayout>
